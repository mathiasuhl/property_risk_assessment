<%- model_class = Facility -%>
<div class="page-header">
  <h1><%=t '.title', :default => Facility %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @facility.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:specification) %></dt>
      <dd><pre class="prettyprint"><%= @facility.specification %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:notes) %></dt>
      <dd><pre class="prettyprint"><%= @facility.notes %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:base_of_check) %></dt>
      <dd><pre class="prettyprint"><%= @facility.base_of_check %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:amount) %></dt>
      <dd><pre class="prettyprint"><%= @facility.amount %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:number) %></dt>
      <dd><pre class="prettyprint"><%= @facility.number %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              @property, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_property_facility_path(@facility,@property), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              property_facility_path(@facility,@property),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

