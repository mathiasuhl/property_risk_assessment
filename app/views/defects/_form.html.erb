<%= form_for @defect, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :level, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :level, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :notes, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :notes, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :status, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :status, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :proof_of_status, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :proof_of_status, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :proof_of_order, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :proof_of_order, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :has_confirmed_order, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.check_box :has_confirmed_order, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  defects_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
