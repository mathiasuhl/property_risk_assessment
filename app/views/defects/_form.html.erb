<%= simple_form_for(@defect) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :level %>
    <%= f.input :notes %>
    <%= f.association :inspection %>
    <%= f.input :status %>
    <%= f.input :proof_of_status %>
    <%= f.input :proof_of_order %>
    <%= f.input :has_confirmed_order %>
    <%= f.association :service %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
