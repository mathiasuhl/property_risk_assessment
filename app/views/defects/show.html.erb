<%- model_class = Defect -%>
<div class="page-header">
  <h1><%=t '.title', :default => Defect %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:level) %></dt>
      <dd><pre class="prettyprint"><%= @defect.level %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:notes) %></dt>
      <dd><pre class="prettyprint"><%= @defect.notes %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:status) %></dt>
      <dd><pre class="prettyprint"><%= @defect.status %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:proof_of_status) %></dt>
      <dd><pre class="prettyprint"><%= @defect.proof_of_status %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:proof_of_order) %></dt>
      <dd><pre class="prettyprint"><%= @defect.proof_of_order %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:has_confirmed_order) %></dt>
      <dd><pre class="prettyprint"><%= @defect.has_confirmed_order %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              defects_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_defect_path(@defect), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              defect_path(@defect),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

