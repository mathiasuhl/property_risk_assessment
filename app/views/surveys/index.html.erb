<h1>Listing surveys</h1>

<table>
  <thead>
    <tr>
      <th>Has cracks</th>
      <th>Has maintanance sticker</th>
      <th>Has damp areas</th>
      <th>Has fire extinguisher</th>
      <th>Has maintanance and inspection manuel</th>
      <th>Has fire wall</th>
      <th>Has free evacuation route</th>
      <th>Has closeable fire doors</th>
      <th>Property</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @surveys.each do |survey| %>
      <tr>
        <td><%= survey.has_cracks %></td>
        <td><%= survey.has_maintanance_sticker %></td>
        <td><%= survey.has_damp_areas %></td>
        <td><%= survey.has_fire_extinguisher %></td>
        <td><%= survey.has_maintanance_and_inspection_manuel %></td>
        <td><%= survey.has_fire_wall %></td>
        <td><%= survey.has_free_evacuation_route %></td>
        <td><%= survey.has_closeable_fire_doors %></td>
        <td><%= survey.property %></td>
        <td><%= link_to 'Show', survey %></td>
        <td><%= link_to 'Edit', edit_survey_path(survey) %></td>
        <td><%= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

