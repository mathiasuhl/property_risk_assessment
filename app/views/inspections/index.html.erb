<%- model_class = Inspection -%>
<div class="page-header">
  <h1><%=t '.title', :default => Inspection %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:date) %></th>
      <th><%= model_class.human_attribute_name(:inspector) %></th>
      <th><%= model_class.human_attribute_name(:eq_number) %></th>
      <th><%= model_class.human_attribute_name(:protocol_number) %></th>
      <th><%= model_class.human_attribute_name(:protocol_file) %></th>
      <th><%= model_class.human_attribute_name(:inspector_company) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @inspections.each do |inspection| %>
      <tr>
        <td><%= inspection.id %></td>
        <td><%= inspection.date %></td>
        <td><%= inspection.inspector %></td>
        <td><%= inspection.eq_number %></td>
        <td><%= inspection.protocol_number %></td>
        <td><%= inspection.protocol_file %></td>
        <td><%= inspection.inspector_company %></td>
        <td><%=l inspection.created_at, format: :long %></td>
        <td>
          <%= link_to inspection_path(inspection), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to inspection_path(inspection), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_inspection_path,
            :class => 'btn btn-primary' %>
