<%- model_class = InspectionSpecification -%>
<div class="page-header">
  <h1>Pr√ºfungsverordnungen Liste</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:specification) %></th>
      <th><%= model_class.human_attribute_name(:basis_of_check) %></th>
      <th><%= model_class.human_attribute_name(:intervall_in_years) %></th>
      <th><%= model_class.human_attribute_name(:intervall_information) %></th>
      <th><%= model_class.human_attribute_name(:kind_of_check) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @inspection_specifications.each do |inspection_specification| %>
      <tr>
        <td><%= inspection_specification.specification %></td>
        <td><%= inspection_specification.basis_of_check %></td>
        <td><%= inspection_specification.intervall_in_years %></td>
        <td><%= inspection_specification.intervall_information %></td>
        <td><%= inspection_specification.kind_of_check %></td>
        <td>
          <%= link_to inspection_specification_path(inspection_specification), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to inspection_specification_path(inspection_specification), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_inspection_specification_path,
            :class => 'btn btn-primary' %>
