<%- model_class = InspectionSpecification -%>
<div class="page-header">
  <h1>Pr√ºfungsverordnung</h1>
</div>

<div class="fieldset">
  <dl>

      <dt class="label label-default"><%= model_class.human_attribute_name(:specification) %></dt>
      <dd><pre class="prettyprint"><%= @inspection_specification.specification %></pre></dd>

      <dt class="label label-default"><%= model_class.human_attribute_name(:basis_of_check) %></dt>
      <dd><pre class="prettyprint"><%= @inspection_specification.basis_of_check %></pre></dd>

      <dt class="label label-default"><%= model_class.human_attribute_name(:intervall_in_years) %></dt>
      <dd><pre class="prettyprint"><%= @inspection_specification.intervall_in_years %></pre></dd>

      <dt class="label label-default"><%= model_class.human_attribute_name(:intervall_information) %></dt>
      <dd><pre class="prettyprint"><%= @inspection_specification.intervall_information %></pre></dd>

      <dt class="label label-default"><%= model_class.human_attribute_name(:kind_of_check) %></dt>
      <dd><pre class="prettyprint"><%= @inspection_specification.kind_of_check %></pre></dd>

      <dt class="label label-default"><%= model_class.human_attribute_name(:first_check) %></dt>
      <dd><pre class="prettyprint"><%= @inspection_specification.first_check %></pre></dd>

      <dt class="label label-default"><%= model_class.human_attribute_name(:first_check_information) %></dt>
      <dd><pre class="prettyprint"><%= @inspection_specification.first_check_information %></pre></dd>

      <dt class="label label-default"><%= model_class.human_attribute_name(:comment) %></dt>
      <dd><pre class="prettyprint"><%= @inspection_specification.comment %></pre></dd>

  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              inspection_specifications_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_inspection_specification_path(@inspection_specification), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              inspection_specification_path(@inspection_specification),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

