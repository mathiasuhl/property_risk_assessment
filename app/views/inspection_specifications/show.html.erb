<%- model_class = InspectionSpecification -%>
<div class="page-header">
  <h1><%=t '.title', :default => InspectionSpecification %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @inspection_specification.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:basis) %></dt>
      <dd><pre class="prettyprint"><%= @inspection_specification.basis %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:inspector) %></dt>
      <dd><pre class="prettyprint"><%= @inspection_specification.inspector %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:intervall_in_years) %></dt>
      <dd><pre class="prettyprint"><%= @inspection_specification.intervall_in_years %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:is_first_check_necessary) %></dt>
      <dd><pre class="prettyprint"><%= @inspection_specification.is_first_check_necessary %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:inspector_first_check) %></dt>
      <dd><pre class="prettyprint"><%= @inspection_specification.inspector_first_check %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              inspection_specifications_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_inspection_specification_path(@inspection_specification), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              inspection_specification_path(@inspection_specification),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

